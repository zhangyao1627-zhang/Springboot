<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.neusoft.teacher.mapper.TeacherMapper">
    <select id="getAllByFilter" parameterType="java.util.Map" resultType="Teacher">
        select * from teacher where 1=1
        <if test="id!=null and id!=''">
            and id = #{id}
        </if>
        <if test="password!=null and password!=''">
            and password = #{password}
        </if>
        <if test="usertypeid!=null and usertypeid!=0 ">
            and usertypeid = #{usertypeid}
        </if>
    </select>
</mapper>